        </sequential>
    </macrodef>

    <target name="publish-mathsat" depends="compile-mathsat-bindings-linux, compile-mathsat-bindings-windows, load-ivy"
        description="Publish MathSAT binaries to Ivy repo.">
        <fail unless="mathsat.version">
